<Window x:Class="MioClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MioClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel FocusManager.FocusedElement="{Binding ElementName=UserMessage}">

        <TextBlock Text="Type a message: "/>
        <TextBox x:Name="UserMessage" Padding="5" KeyDown="UserMessage_KeyDown" />

        <TextBlock x:Name="ServerMessage"  />

    </StackPanel>
</Window>
